<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="oval">
            <solid android:color="#d1eeff" />

            <stroke android:width="3dp" android:color="#d1eeff" />
        </shape></item>
    <item android:state_focused="true"><shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="oval">
            <solid android:color="#d1eeff" />

            <stroke android:width="3dp" android:color="#d1eeff" />
        </shape></item>
    <item android:state_focused="false"><shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="oval">
            <solid android:color="#ffffff" />

            <stroke android:width="3dp" android:color="#ffffff" />
        </shape></item>
    <item android:state_pressed="false"><shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="oval">
            <solid android:color="#ffffff" />

            <stroke android:width="3dp" android:color="#ffffff" />
        </shape></item>

</selector>